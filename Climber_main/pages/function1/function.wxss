/* 显示时间的样式(还没该 像素 px-rpx) */
.container {
  display: flex;
  height: 100vh;
  flex-direction: column;
  overflow: hidden;
  background-color: #fff;
}

/* 隐藏文字的样式 */
.hidden_one {
  text-align: center;
  font-size: 40rpx;
  color: red;
}

.hidden_two {
  text-align: center;
  font-size: 40rpx;
  color: green;
}

/* 设置按钮的样式 */
.setting {
  display: flex;
  justify-content: center;
  height: 50rpx;
  padding-top: 20px;
}



.timer_main {
  position: relative;
  display: flex;
  flex: 2;
  justify-content: center;
  text-align: center;
  background-color: #3197ed;
  transition: all .5s;
  z-index: 1;
  padding: 10px 0;
}

.timer_time-wrap {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150px;
  height: 150px;
  text-align: center;
  transition: all .3s;
  top: 50px;
}

.timer_progress {
  position: absolute;
  top: 0;
  width: 75px;
  height: 150px;
  overflow: hidden;
  transition: all .3s;
}

.timer_progress_mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  border: 3px solid #1589eb;
  opacity: .5;
  border-radius: 50%;
}

.timer_left {
  left: 0;
}

.timer_right {
  right: 0;
}

.timer_circle {
  position: absolute;
  top: 0;
  width: 150px;
  height: 150px;
  border: 3px solid transparent;
  border-radius: 50%;
  transition: all .3s;
}

.timer_circle--left {
  left: 0;
  border-left: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(45deg);
}

.timer_circle--right {
  right: 0;
  border-right: 3px solid #fff;
  border-bottom: 3px solid #fff;
  transform: rotate(-45deg);
}

.timer_time {
  font-size: 40px;
  color: #fff;
  font-weight: lighter;
  transition: font-size .3s;
}

.timer_taskName {
  position: absolute;
  top: 6px;
  font-size: 20px;
  letter-spacing: 5px;
  color: purple;
  transition: all .3s;
  animation: text_an 7s infinite ease-in-out;
  -webkit-animation: text_an 7s infinite ease-in-out;
}

@keyframes text_an {
  0% {
      opacity: 0.1;
      -webkit-opacity: 0.1;
  }

  25% {
      opacity: 0.5;
      -webkit-opacity: 0.5;
  }

  50% {
      opacity: 1;
      -webkit-opacity: 1;
  }

  75% {
      opacity: 0.5;
      -webkit-opacity: 0.5;
  }

  100% {
      opacity: 0.1;
      -webkit-opacity: 0.1;
  }
}

.timer_done {
  width: 64px;
  height: 64px;
}

.timer_footer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  transition: all .3s;
}

.timer .timer_ctrl {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #fff;
  width: 80px;
  height: 80px;
  margin: 0 20px;
  border-radius: 100%;
  transition: all .7s;
  background-color: #3197ed;
}

.timer .timer_ctrl2 {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 12px;
  color: #fff;
  width: 80px;
  height: 80px;
  margin: 0 30px;
  border-radius: 100%;
  transition: all .7s;
  background-color: #3197ed;
}

/* 专注开始时的样式 */
.timer--runing .timer_main {
  flex: 1;
}

.timer--runing .timer_time {
  font-size: 45px;
}

.timer--runing .timer_time-wrap {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_progress {
  width: 100px;
  height: 200px;
}

.timer--runing .timer_circle {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_footer {
  flex: 0;
  position: absolute;
  bottom: 50px;
  width: 100%;
  z-index: 10;
}

.timer--runing .timer_ctrl {
  background-color: #208DEA;
  height: 40px;
  margin-bottom: 50px;
  border: 1px dashed #dedede;
  border-radius: 20px;
}

.timer--runing .timer_ctrl2 {
  background-color: #208DEA;
  height: 60px;
  margin-bottom: 30px;
  border: 1px dashed #dedede;
  border-radius: 20px;
}

.container_tap {
    display: flex;
    flex-direction: row;
    height: 95rpx;
    margin-bottom: 30px;
  }
.exam_num {
