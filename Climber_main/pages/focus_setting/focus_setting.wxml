
<!-- 调节呼吸时间的swiper，1-10min -->
<!-- 播放白色音乐 -->

<!-- 测试引入的设置 -->
<view class="container">
  	<!-- 隐藏开关 -->
  	<switch bindchange="hidden_tap" checked="{{boolnum}}">显示已经呼和吸的次数</switch>
	<view class="section panel">
	  <text class="section_title">专注时长(分钟)</text>
	  <view class="section_body">
	    <slider
	    	bindchange="changeWorkTime"
	    	show-value="true"
	    	min="1"
	    	max="20"
	    	value="{{workTime}}"
	    	left-icon="cancel"
	    	right-icon="success_no_circle"/>
	  </view>
	</view>

	<view class="section panel">
	  <view class="section_title">
	  	<switch class="section_check" size="mini" checked bindchange="switch1Change"/>
	  	<text>启用铃声</text>
	  </view>
	  <view class="section_body">
	  	<text bindtab="" class="section_tip">选择铃声 > </text>
	  </view>
	</view>

</view>